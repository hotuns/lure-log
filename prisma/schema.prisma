generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户
model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  phone    String    @unique
  email    String?   @unique
  password String
  backpack Backpack?
  combos   Combo[]
  records  Record[]
}

model Backpack {
  id           Int           @id @default(autoincrement())
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  fishingRods  FishingRod[]
  fishingReels FishingReel[]
}

model Combo {
  id            Int         @id @default(autoincrement())
  userId        Int
  user          User        @relation(fields: [userId], references: [id])
  fishingRodId  Int
  fishingRod    FishingRod  @relation(fields: [fishingRodId], references: [id])
  fishingReelId Int
  fishingReel   FishingReel @relation(fields: [fishingReelId], references: [id])
  Record        Record[]
}

model FishingRod {
  id         Int       @id @default(autoincrement())
  brand      String
  model      String
  length     Float
  sections   Int
  powerValue String
  action     String
  backpackId Int?
  backpack   Backpack? @relation(fields: [backpackId], references: [id])
  combos     Combo[]
}

model FishingReel {
  id         Int       @id @default(autoincrement())
  type       String
  brand      String
  model      String
  weight     Float
  gearRatio  Float
  braking    String
  backpackId Int?
  backpack   Backpack? @relation(fields: [backpackId], references: [id])
  combos     Combo[]
}

model Record {
  id            Int          @id @default(autoincrement())
  userId        Int
  user          User         @relation(fields: [userId], references: [id])
  time          DateTime
  comboId       Int?
  combo         Combo?       @relation(fields: [comboId], references: [id])
  weather       String
  rain          Boolean
  pressure      Float
  windSpeed     Float
  windDirection String
  fishingSpotId Int
  fishingSpot   FishingSpot  @relation(fields: [fishingSpotId], references: [id])
  fishRecords   FishRecord[]
}

model FishingSpot {
  id          Int      @id @default(autoincrement())
  coordinates String
  locationTag String
  description String?
  records     Record[]
}

model FishRecord {
  id      Int    @id
  record  Record @relation(fields: [id], references: [id])
  species String
  length  Float
  weight  Float
}

model FishSpecies {
  id          Int     @id @default(autoincrement())
  speciesName String
  description String?
  imageURL    String?
}
