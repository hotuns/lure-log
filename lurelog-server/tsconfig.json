{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "declaration": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "exclude": ["*.js", "*.ts", "dist", "node_modules", "test", "prisma/seed.ts"]
}
